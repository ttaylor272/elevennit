 <!DOCTYPE html>
<html>
<head>
  <title>Elevennit</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container wrap">
  <div class="row">
    <div class="col-xs-12">
      <header>
        <%= link_to "Elevennit", root_path %>
      </header>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-xs-8">
        <main>

          <!-- BEGIN flash messages -->
          <% flash.each do |name, msg| %>
            <% if msg.is_a? Array %>

              <%= content_tag :div, class: "alert #{flash_class name}" do %>
                <ul>
                  <% msg.each do |message| %>
                    <%= content_tag :li, message %>
                  <% end %>
                </ul>
              <% end %>

            <% else %>
              <%= content_tag :div, msg, class: "alert #{flash_class name}" %>
            <% end %>

          <% end %>
          <!-- END flash messages -->


          <!-- BEGIN main content -->
          <%= yield %>
          <!-- END main content -->
        </main>
      </div>
      <div class="col-xs-4">
        <nav id="sidebar">
          <%= link_to 'Submit a new link', new_post_path %>
          <%= link_to 'Submit a text post', new_post_path(post_type: :text) %>
          <%= link_to 'Create a new category', new_category_path %>
        </nav>
      </div>
    </div>
  </div>
  <div class="push"></div>
</div>

<footer>
  Use of this site constitutes acceptance of the <a href="http://dresdenfiles.wikia.com/wiki/Unseelie_Accords">Unseelie Accords</a>.
</footer>
</body>
</html>